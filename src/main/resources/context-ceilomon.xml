<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/rabbit
	                    http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd
	                    http://www.springframework.org/schema/beans
	                    http://www.springframework.org/beans/spring-beans-4.0.xsd">


	<rabbit:connection-factory id="connectionFactory"
    virtual-host="${jms.rabbitmq.vhost}"
    host="${jms.rabbitmq.host}"
    port="${jms.rabbitmq.port}"
    username="${jms.rabbitmq.username}" 
    password="${jms.rabbitmq.password}" />
	
	<rabbit:queue name="myTestQueue" />
	
	<rabbit:topic-exchange name="openstack">
		<rabbit:bindings>
			<rabbit:binding queue="myTestQueue" pattern="compute.#" />
			<rabbit:binding queue="myTestQueue" pattern="notifications.#" />
		</rabbit:bindings>
	</rabbit:topic-exchange>
	
	<rabbit:listener-container connection-factory="connectionFactory">
		<rabbit:listener queues="myTestQueue" ref="cmonListener" />
	</rabbit:listener-container>

</beans>