<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/rabbit 
	                    http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd 
	                    http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/beans/spring-beans-4.0.xsd">


	<bean id="foo" class="hello.MyFoo" />

	<bean id="rcf" class="com.rabbitmq.client.ConnectionFactory">
		<property name="host" value="${rabbitmq.host:localhost}"/>
		<property name="requestedHeartbeat" value="10" />
	</bean>

	<rabbit:connection-factory id="connectionFactory" host="27.122.227.161" port="44471" username="openstack" password="!cloud01" />

	<rabbit:template id="amqpTemplate" connection-factory="connectionFactory"  exchange="myExchange" routing-key="foo.bar"  />

	<rabbit:admin connection-factory="connectionFactory" />

	<rabbit:queue name="myQueue">
		<rabbit:queue-arguments value-type="java.lang.Long">
			<entry key="x-message-ttl" value="2400000" />
		</rabbit:queue-arguments>
	</rabbit:queue>

	<rabbit:topic-exchange name="myExchange">
		<rabbit:bindings>
			<rabbit:binding queue="myQueue" pattern="foo.*" />
		</rabbit:bindings>
	</rabbit:topic-exchange>
	
	<rabbit:listener-container connection-factory="connectionFactory">
		<rabbit:listener queues="myQueue" ref="foo" />
	</rabbit:listener-container>

</beans>